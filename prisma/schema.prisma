// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String?
  password String?

  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}

model SliderSchool {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  img1       String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}

model RegSchool {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  irImg         String?
  irDescription String?
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @updatedAt
  deleted_at    DateTime? @map("deleted_at")
}

model News {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  title      String? // ชื่อกิจกรรม
  type       String?
  subTitle   String? // หัวข้อย่่อ 
  detail     String? // รายละเอียด
  img        String? // รูปกิจกรรม
  date       String? // วันที่
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}

model RegisterForm {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  regId         String? //รหัสนักศึกษา
  regIdpersonal String? //รหัหสบัตรประชาชน
  regBirth      String? //วันเกิด
  regPrefix     String? // คำนำหน้า
  regSex        String? // เพศ
  regNation     String? // ประเทศ
  regName       String? //ชื่อ
  regLastname   String? //นามสกุล
  regEname      String? //ชื่ออิง
  regElastname  String? // นามสกุลอิง
  regPhone      String? //เบอร์
  regEmail      String? //เมล
  regImg        String? //รูป

  //ประวัติการศึกษา
  regSchool String?
  regDegree String?
  regGpa    String?

  //ข้างล่างเป็นเกี่ยวกับคณะและหลักสูตร
  regProgram String? //หลักสูตร
  regFaculty String?
  regMajor   String?

  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}

model IPAddress {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  ipAddress  String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}
