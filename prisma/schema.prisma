// ล็อคอินแอดมิน
model AdminUser {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  username String?
  password String?

}

// หมวดหมู่หน้า INDEX
// รูปสไลด์แรก
model SliderSchool {
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  img1 String?
}

model NewsSchool {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  newName      String? // ชื่อกิจกรรม
  newTitle     String? // // หัวข้อหลัก
  newSubTitle  String? // หัวข้อย่่อ 
  newSubDetail String? // รายละเอียด
  newImg       String? // รูปกิจกรรม
  newDate      String? // วันที่

}




//หน้า สมัครเรียน  (แต่ไม่ใช่แบบฟอร์มสมัคร)
model RegSchool  {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  irImg String?
  irDescription String? 
}


//กิจกรรมในหน้า index
model ActivitySchool  { 
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  activityName String? // ชื่อกิจกรรม
  activityTitle String? // // หัวข้อหลัก
  activitySubTitle String? // หัวข้อย่่อ 
  activitySubDetail String? // รายละเอียด
  activityImg String? // รูปกิจกรรม
  activityDate String? // วันที่

  activityDescription String? // รายละเอียดขอมูลกิจกรรม
}



//ฟอร์มสมัคร 
model RegisterForm  { 
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  //ข้อมูลผู้สมัคร
  regId String? //รหัสนักศึกษา
  regIdpersonal String? //รหัหสบัตรประชาชน
  regBirth String? //วันเกิด
  regPrefix String? // คำนำหน้า
  regSex String? // เพศ
  regNation String? // ประเทศ
  regName String?  //ชื่อ
  regLastname String? //นามสกุล
  regEname String? //ชื่ออิง
  regElastname String? // นามสกุลอิง
  regPhone String? //เบอร์
  regEmail String? //เมล
  regImg String? //รูป

  //ประวัติการศึกษา
  regSchool String?
  regDegree String?
  regGpa String?

  //ข้างล่างเป็นเกี่ยวกับคณะและหลักสูตร
  regProgram String?//หลักสูตร
  regFaculty String?
  regMajor String?

}

model IPAddress {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  ipAddress String?
}



