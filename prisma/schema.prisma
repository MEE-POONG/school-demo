// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model HeadPage {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  title      String?
  subTitle   String? // หัวข้อย่่อ 
  pageCheck  String?
  pathBtn    String?
  btnTitle   String?
  detail     String?
  imgOne     String?
  imgTwo     String?
  imgThree   String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}

model Gallery {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  img        String?
  SetColumns String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
  News       News?     @relation(fields: [newsId], references: [id])
  newsId     String?   @db.ObjectId
}

model News {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  title      String? // ชื่อกิจกรรม
  subTitle   String? // หัวข้อย่่อ 
  detail     String? // รายละเอียด
  img        String? // รูปกิจกรรม
  promoteImg String? // รูปกิจกรรม
  date       String? // วันที่
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
  gallery    Gallery[]
  NewsType   NewsType? @relation(fields: [newsTypeId], references: [id])
  newsTypeId String?   @db.ObjectId
}

model NewsType {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  nameTH     String
  nameEN     String
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
  News       News[]
}

model CourseGroup {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  nameTH     String?
  nameEN     String?
  img        String?
  createdAt  DateTime?    @default(now())
  updatedAt  DateTime?    @updatedAt
  deleted_at DateTime?    @map("deleted_at")
  CourseList CourseList[]
}

model CourseList {
  id              String       @id @default(auto()) @map("_id") @db.ObjectId
  FieldStudy      String?
  First           String?
  Second          String?
  Sum             String?
  associateFirst  String?
  associateSecond String?
  associateSum    String?
  createdAt       DateTime?    @default(now())
  updatedAt       DateTime?    @updatedAt
  deleted_at      DateTime?    @map("deleted_at")
  CourseGroup     CourseGroup? @relation(fields: [courseGroupId], references: [id])
  courseGroupId   String?      @db.ObjectId
}

model ContactUS {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  addressOne   String?
  addressTwo   String?
  addressThree String?
  subDistrict  String?
  district     String?
  province     String?
  zipcode      String?
  tel          String?
  fax          String?
  email        String?
  facebook     String?
  createdAt    DateTime? @default(now())
  updatedAt    DateTime? @updatedAt
  deleted_at   DateTime? @map("deleted_at")
}

model welfare {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  img        String?
  title      String?
  detail     String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}

// // NO 
model AdminUser {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  username   String?
  password   String?
  firstname  String?
  lastname   String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}

model RegisterForm {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  studentId   String? //รหัสนักศึกษา
  personalID  String? //รหัหสบัตรประชาชน
  birth       String?
  prefix      String?
  sex         String?
  nation      String?
  nameTh      String?
  lastnameTh  String?
  nameEng     String?
  lastnameEng String?
  email       String?
  phone       String?
  img         String?
  oldSchool   String?
  degree      String?
  gpa         String?
  program     String?
  faculty     String?
  major       String?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
  deleted_at  DateTime? @map("deleted_at")
}

model IPAddress {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  ipAddress  String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}

model About {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  title         String?
  subTitle      String?
  img           String?
  personChart   String?
  detail        String?
  detailTo      String?
  StudyingCount Int?
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @updatedAt
  deleted_at    DateTime? @map("deleted_at")
}
